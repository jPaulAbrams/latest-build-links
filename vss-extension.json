{
    "manifestVersion": 1,
    "id": "build-metrics-widget",
    "version": "1.0.2",
    "name": "Build Overview Widget",
    "description": "A dashboard widget to show build metrics.",
    "publisher": "paulabrams1",
    "public": false,
    "targets": [
        {
            "id": "Microsoft.VisualStudio.Services"
            }
        ],
    "icons": {
        "default": "images/icon.png"
    },
    "demands": [
        "contribution/ms.vss-dashboards-web.widget-sdk-version-2", 
        "contribution/ms.vss-web.charts-service"
    ],
    "contributions": [
        {
            "id": "paulabrams1.build-metrics-widget",
            "type": "ms.vss-dashboards-web.widget",
            "description": "A dashboard widget to show build metrics.",
            "targets": [
                "ms.vss-dashboards-web.widget-catalog"
            ],
            "properties": {
                "name": "Build Metrics",
                "description": "A dashboard widget to show build metrics.",
                "catalogIconUrl:": "images/icon.png",
                "previewImageUrl": "images/preview.png",                            
                "uri": "index.html",
                "supportedSizes": [
                    {
                        "rowSpan": 1,
                        "columnSpan": 1
                    }
                ],
                "supportedScopes": ["project_team"]
            }
        }
    ],
    "files": [
        {
            "path": "images", "addressable": true
        },
        {
            "path": "scripts", "addressable": true
        },
        {
            "path": "index.html", "addressable": true
        }
    ],
    "categories": [
        "Azure Pipelines"
    ],
    "content": {
        "details": {
          "path": "readme.md"
        }
    },
    "repository": {
        "type": "git",
        "uri": "https://github.com/pabrams/vsts-build-overview-widget"
    },
    "links": {
        "repository": {
          "uri": "https://github.com/pabrams/vsts-build-overview-widget"
        },
        "issues": {
          "uri": "https://github.com/pabrams/vsts-build-overview-widget/issues"
        }
    },
    "tags": [
        "Dashboard",
        "Widget",
        "Build",
        "Release",
        "Activity"
    ],
    "scopes": [
        "vso.build"
    ]
}